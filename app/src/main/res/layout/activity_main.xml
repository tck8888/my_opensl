<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenSL ES 开始播放 pcm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始录制 pcm" />

        <Button
            android:id="@+id/btn_stop_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="停止录制 pcm" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_play_pcm_use_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用java 开始播放 pcm" />

        <Button
            android:id="@+id/btn_stop_play_pcm_use_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用java 停止播放 pcm" />
    </LinearLayout>

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_record_audio_use_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用android原生录制音频" />
</LinearLayout>